<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoglobos1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="24dp"
        android:text="Resultado"
        android:textColor="#1D010A"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/n8"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/n9"
        app:layout_constraintTop_toTopOf="@+id/n9" />

    <Button
        android:id="@+id/limpiar"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFEB3B"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/n7"
        app:layout_constraintTop_toTopOf="@+id/n7" />

    <Button
        android:id="@+id/n7"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="7"
        app:layout_constraintStart_toEndOf="@+id/n8"
        app:layout_constraintTop_toTopOf="@+id/n8" />

    <Button
        android:id="@+id/n9"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="#00BCD4"
        android:text="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado" />

    <Button
        android:id="@+id/n6"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="#00BCD4"
        android:text="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n9" />

    <Button
        android:id="@+id/button1n30"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="#00BCD4"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n6" />

    <Button
        android:id="@+id/n0"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="#00BCD4"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1n30" />

    <Button
        android:id="@+id/menos"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#E66A95"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/n0"
        app:layout_constraintTop_toTopOf="@+id/n0" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#E66A95"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/igual"
        app:layout_constraintTop_toTopOf="@+id/igual" />

    <Button
        android:id="@+id/igual"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#FFEB3B"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/menos"
        app:layout_constraintTop_toTopOf="@+id/menos" />

    <Button
        android:id="@+id/n2"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1n30"
        app:layout_constraintTop_toTopOf="@+id/button1n30" />

    <Button
        android:id="@+id/mult"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#E66A95"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/n1"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n1"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/n2"
        app:layout_constraintTop_toTopOf="@+id/n2" />

    <Button
        android:id="@+id/n5"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/n6"
        app:layout_constraintTop_toTopOf="@+id/n6" />

    <Button
        android:id="@+id/n4"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="#00BCD4"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/n5"
        app:layout_constraintTop_toTopOf="@+id/n5" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#E66A95"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/n4"
        app:layout_constraintTop_toTopOf="@+id/n4" />

</android.support.constraint.ConstraintLayout>